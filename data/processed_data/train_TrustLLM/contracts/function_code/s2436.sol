function fund(address[] calldata _recipient, uint256[] calldata _amount) external nonReentrant { require(!initialised, "initialised already"); uint256 totalAmount = 0; for (uint256 i = 0; i < _recipient.length; i++) { uint256 amount = _amount[i]; totalLocked[_recipient[i]] += amount; totalAmount += amount; emit Funded(_recipient[i], amount); } rewardToken.safeTransferFrom(msg.sender, address(this), totalAmount); initialised = true; }
