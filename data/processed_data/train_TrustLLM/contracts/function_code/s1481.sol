function approve( uint256 profileId, address[] calldata addresses, bool[] calldata toApprove ) external { if (addresses.length != toApprove.length) revert Errors.InitParamsInvalid(); address owner = IERC721(HUB).ownerOf(profileId); if (msg.sender != owner) revert Errors.NotProfileOwner(); for (uint256 i = 0; i < addresses.length; ++i) { _approvedByProfileByOwner[owner][profileId][addresses[i]] = toApprove[i]; } emit Events.FollowsApproved(owner, profileId, addresses, toApprove, block.timestamp); }
